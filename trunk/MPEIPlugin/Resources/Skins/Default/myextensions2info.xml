<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>804</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:14001</define>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>Animations\Background_stage.png</texture>
      <width>720</width>
      <height>576</height>
    </control>    
    <import>common.time.xml</import>
    <control>
      <type>label</type>
      <id>1</id>
      <posX>60</posX>
      <posY>27</posY>
      <label>#MPE.Selected.Name</label>
      <font>font14</font>
      <align>left</align>
      <textcolor>White</textcolor>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
    </control>
    <control>
      <description>Action Buttons</description>
      <type>group</type>
      <posX>40</posX>
      <posY>165</posY>
      <layout>StackLayout(0, Vertical, true)</layout>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
      <control>
        <id>2</id>
        <description>Install</description>
        <type>button</type>
        <onright>50</onright>
        <visible>!string.equals(#MPE.Selected.isinstalled,true)</visible>
        <label>#MPEI.Translation.Install.Label</label>
        <onright>2</onright>
        <ondown>3</ondown>
        <onup>8</onup>
      </control>
      <control>
        <id>3</id>
        <description>UnInstall</description>
        <type>button</type>
        <onright>50</onright>
        <visible>string.equals(#MPE.Selected.isinstalled,true)</visible>
        <label>#MPEI.Translation.Uninstall.Label</label>
        <onright>3</onright>
        <ondown>4</ondown>
        <onup>2</onup>
      </control>
      <control>
        <id>4</id>
        <description>Update</description>
        <type>button</type>
        <onright>50</onright>
        <visible>string.equals(#MPE.Selected.haveupdate,true)</visible>
        <label>#MPEI.Translation.Update.Label</label>
        <onright>4</onright>
        <ondown>5</ondown>
        <onup>3</onup>
      </control>
      <control>
        <id>5</id>
        <description>Disable</description>
        <type>button</type>
        <onright>50</onright>
        <visible>string.equals(#MPE.Selected.IsEnabled,true)</visible>
        <label>#MPEI.Translation.Disable.Label</label>
        <onright>5</onright>
        <ondown>6</ondown>
        <onup>4</onup>
      </control>
      <control>
        <id>6</id>
        <description>Enable</description>
        <type>button</type>
        <onright>50</onright>
        <visible>string.equals(#MPE.Selected.IsDisabled,true)</visible>
        <label>#MPEI.Translation.Enable.Label</label>
        <onright>6</onright>
        <ondown>7</ondown>
        <onup>5</onup>
      </control>
      <control>
        <id>7</id>
        <description>Settings</description>
        <type>button</type>
        <onright>50</onright>
        <visible>string.equals(#MPE.Selected.HaveSettings,true)</visible>
        <label>#MPEI.Translation.Settings.Label</label>
        <onright>7</onright>
        <ondown>8</ondown>
        <onup>6</onup>
      </control>
      <control>
        <id>8</id>
        <description>Change Log</description>
        <type>button</type>
        <onright>50</onright>
        <label>#MPEI.Translation.ChangeLog.Label</label>
        <onright>8</onright>
        <ondown>2</ondown>
        <onup>7</onup>
      </control>
    </control>
    <control>
      <type>image</type>
      <posX>580</posX>
      <posY>98</posY>
      <width>120</width>
      <height>120</height>
      <keepaspectratio>yes</keepaspectratio>
      <texture>#MPE.Selected.Icon</texture>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
    </control>    
    <control>
      <type>label</type>
      <posX>210</posX>
      <posY>174</posY>
      <width>249</width>
      <label>#MPEI.Translation.Version.Label</label>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
    </control>
    <control>
      <type>label</type>
      <posX>395</posX>
      <posY>175</posY>
      <width>426</width>
      <label>#MPE.Selected.Version</label>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
    </control>
    <control>
      <type>label</type>
      <posX>210</posX>
      <posY>203</posY>
      <width>249</width>
      <label>#MPEI.Translation.Author.Label</label>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
    </control>
    <control>
      <type>label</type>
      <posX>395</posX>
      <posY>201</posY>
      <width>428</width>
      <label>#MPE.Selected.Author</label>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
    </control>
    <control>
      <type>label</type>
      <posX>210</posX>
      <posY>229</posY>
      <width>248</width>
      <label>#MPEI.Translation.ReleaseDate.Label</label>
      <textcolor>ffa9d0f7</textcolor>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
    </control>
    <control>
      <type>label</type>
      <posX>395</posX>
      <posY>228</posY>
      <width>428</width>
      <label>#MPE.Selected.ReleaseDate</label>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
    </control>
    <control>
      <type>textboxscrollup</type>
      <posX>210</posX>
      <posY>280</posY>
      <width>450</width>
      <height>180</height>
      <font>font11</font>
      <label>#MPE.Selected.Description</label>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
    </control>
    <control>
      <description>Image Tags</description>
      <type>group</type>
      <posX>210</posX>
      <posY>260</posY>
      <layout>StackLayout(4, Horizontal, true)</layout>
      <animation effect="Fade" time="250">WindowOpen</animation>
      <animation effect="Fade" time="100">WindowClose</animation>
      <control>
        <type>image</type>
        <visible>string.contains(#MPE.Selected.DeveloperPick,true)</visible>
        <texture>status_editorpick.png</texture>
      </control>
      <control>
        <type>image</type>
        <visible>string.contains(#MPE.Selected.JustAded,true)</visible>
        <texture>status_new.png</texture>
      </control>
      <control>
        <type>image</type>
        <visible>string.contains(#MPE.Selected.Popular,true)</visible>
        <texture>status_popular.png</texture>
      </control>
     </control>
  </controls>
</window>